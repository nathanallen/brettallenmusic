<h1 class="title">Catalog</h1>
<% SheetMusic.all.each do |sheetmusic| %>
  <h2><%= sheetmusic.title %></h2>
  <p class="lead"><%= sheetmusic.subtitle %></p>
  <p><%= sheetmusic.description %></p>
  <dl class="dl-horizontal">
    <dt>Genre</dt>
    <dd><%= sheetmusic.genre %></dd>
    
    <dt>Duration</dt>
    <dd><%= sheetmusic.duration %> min</dd>
<!--   </dl> -->

  <% sheetmusic.arrangements.each do |arrangement| %>

  <dl class="dl-horizontal">
    <dt>Version</dt>
    <dd><%= arrangement.version %></dd>
    
    <dt>Instrumentation</dt>
    <dd><%= arrangement.instrumentation %></dd>

    <dt>Buy it Now</dt>
    <dd>
      <% arrangement.parts.each do |part| %>
        <button class="label label-info">

          <%= part.items.map{|item| item.price + " - #{item.vendor}"}.join %>

        </button>
      <% end %>
    </dd>
  </dl>

  <% end %>

<% end %>
<hr>
